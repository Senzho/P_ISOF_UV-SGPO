<UserControl x:Class="OrozGP.InterfazGrafica.Catalogos.PanelCategoriasTipo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OrozGP.InterfazGrafica.Catalogos"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Label x:Name="label" Content="¿Algo en especial?" Margin="140,10,140,0" VerticalAlignment="Top" FontSize="28" HorizontalContentAlignment="Center"/>
        <TextBox x:Name="campoBusqueda" Height="32" Margin="140,60,140,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" FontSize="20" Padding="0"/>
        <Image x:Name="botonNueva" Margin="0,0,10,10" Source="/OrozGP;component/Recursos/Imagenes/plus.png" HorizontalAlignment="Right" Width="30" Height="30" VerticalAlignment="Bottom"/>
        <ScrollViewer Margin="45,109,45,10" VerticalScrollBarVisibility="Auto">
            <WrapPanel x:Name="panelCategorias" ItemWidth="280"/>
        </ScrollViewer>

    </Grid>
</UserControl>
